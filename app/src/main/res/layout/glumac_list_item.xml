<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="89dp"
        android:layout_height="85dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="140dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/icon"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_toEndOf="@+id/icon"
        android:layout_weight="1"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="@+id/icon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-8dp"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.151" />

    <TextView
        android:id="@+id/mjestoTextView"
        android:layout_width="94dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/icon"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_toEndOf="@+id/icon"
        android:layout_weight="1"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/godineText"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/godineText"
        android:layout_width="140dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/icon"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_toEndOf="@+id/icon"
        android:layout_weight="1"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/ratingTextView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:text="TextView"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/mjestoTextView"
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/mjestoTextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.158"
        android:layout_marginStart="8dp" />

</android.support.constraint.ConstraintLayout>