<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="glumac" type="ba.unsa.etf.rma.elvircrn.movieinfo.Glumac"/>
        <import type="ba.unsa.etf.rma.elvircrn.movieinfo.Glumac.Spol"/>
    </data>


<android.support.constraint.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="89dp"
        android:layout_height="85dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="140dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/icon"
        android:layout_column="1"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_row="1"
        android:layout_toEndOf="@+id/icon"
        android:layout_weight="1"
        android:text='@{glumac.ime}'
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/icon" />

    <TextView
        android:id="@+id/mjestoTextView"
        android:layout_width="140dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/icon"
        android:layout_column="1"
        android:layout_marginTop="20dp"
        android:layout_row="2"
        android:layout_toEndOf="@+id/icon"
        android:layout_weight="1"
        android:text='@{glumac.mjestoRodjenja}'
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        app:layout_constraintTop_toBottomOf="@+id/godineText"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/godineText" />

    <TextView
        android:id="@+id/godineText"
        android:layout_width="140dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/icon"
        android:layout_column="1"
        android:layout_marginTop="19dp"
        android:layout_row="3"
        android:layout_toEndOf="@+id/icon"
        android:layout_weight="1"
        android:text='@{String.valueOf(glumac.godinaRodjenja) + " " + (glumac.godinaSmrti &lt; 0 ? " " : String.valueOf(glumac.godinaSmrti))}'
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView"
        app:layout_constraintLeft_toLeftOf="@+id/nameTextView" />

    <TextView
        android:id="@+id/ratingTextView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:text='@{String.valueOf(glumac.rating)}'
        app:layout_constraintLeft_toRightOf="@+id/mjestoTextView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        app:layout_constraintHorizontal_bias="0.354"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>
</layout>
