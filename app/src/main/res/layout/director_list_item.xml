<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="director" type="ba.unsa.etf.rma.elvircrn.movieinfo.models.Director"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dirNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginBottom="26dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="8dp"
            android:text='@{director.name}'
            app:layout_constraintBottom_toTopOf="@+id/dirLastNameTextView"
            app:layout_constraintLeft_toLeftOf="@+id/dirLastNameTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/dirLastNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:text='@{director.lastName}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

</layout>
