<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="glumac" type="ba.unsa.etf.rma.elvircrn.movieinfo.Glumac"/>
        <import type="ba.unsa.etf.rma.elvircrn.movieinfo.Glumac.Spol"/>
    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/imePrezimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginTop="16dp"
            android:text='@{glumac.ime + " " + glumac.prezime}'
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imageView"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/godineTextView"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text='@{String.valueOf(glumac.godinaRodjenja) + " " + (glumac.godinaSmrti &lt; 0 ? " " : String.valueOf(glumac.godinaSmrti))}'
            app:layout_constraintLeft_toRightOf="@+id/imageView"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/spolTextView"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/mjestoTextView"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="@{glumac.mjestoRodjenja}"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintLeft_toRightOf="@+id/imageView"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/godineTextView"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/spolTextView"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text='@{String.valueOf(glumac.spol.MUSKI)}'
            app:layout_constraintLeft_toRightOf="@+id/imageView"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/imePrezimeTextView" />

        <TextView
            android:id="@+id/bioTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:text='@{glumac.biografija}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="162dp"
            android:layout_height="174dp"
            app:srcCompat="@drawable/profilna"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp" />

        <ImageButton
            android:id="@+id/shareButton"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@android:drawable/ic_menu_share"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            android:layout_marginBottom="0dp"
            app:layout_constraintTop_toTopOf="@+id/imdbButton"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/imdbButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="7dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintRight_toLeftOf="@+id/shareButton"
            app:srcCompat="@drawable/imdb"
            tools:layout_editor_absoluteX="276dp"
            tools:layout_editor_absoluteY="150dp" />

    </android.support.constraint.ConstraintLayout>



</layout>
